<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/button_comprar"
        android:layout_width="220dp"
        android:layout_height="42dp"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/lightgreen"
        android:shadowColor="#4F95B2"
        android:text="COMPRAR"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#4F95B2"
        android:textColorHint="#4F95B2"
        android:textColorLink="#4F95B2"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="#4F95B2"
        app:strokeColor="#4F95B2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_pedidos"
        android:name="com.naturesecurityvanguard.puzzles_Javi.ui.Pedido.PedidoFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.Pedido.PedidoFragment"
        tools:listitem="@layout/fragment_linea_pedido" />

    <TextView
        android:id="@+id/textView_subtotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="50dp"
        android:text="@string/textView_subtotal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>